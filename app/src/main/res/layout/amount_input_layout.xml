<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="30dp"
    app:cardBackgroundColor="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/close_bttn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Close"
            android:src="@drawable/baseline_close_24"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="@color/black"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_1"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_2"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_3"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="3"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_4"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="4"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_5"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="5"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_6"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="6"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_7"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="7"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_8"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="8"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_9"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="9"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_0"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/decimal_point"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_2"
                android:text="."
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_3"
                android:text="Clear"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ok"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:background="@drawable/button_ripple_effect_4"
                android:text="OK"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>